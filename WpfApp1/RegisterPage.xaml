<Page x:Class="WpfApp1.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="500" d:DesignWidth="300"
        Title="RegisterPage">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="btnBack" Content="&lt;" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnBack_Click" />
            <TextBlock Text="服务器地址" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBox x:Name="ip_addr" Height="30" Margin="0,10,0,0" />
            <TextBlock Text="服务器端口" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBox x:Name="port" Height="30" Margin="0,10,0,0" />
            <TextBlock Text="本地端口" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <TextBox x:Name="local_port" Height="30" Margin="0,10,0,0" />
            <Button x:Name="btnTemp" Content="保存" Height="30" Margin="0,10,0,0" Click="btnTemp_Click" />
        </StackPanel>
    </Grid>
</Page>
